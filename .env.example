# Notion API Configuration
# Copy this file to .env and fill in your values

# Your Notion integration API key (starts with ntn_)
NOTION_API_KEY=ntn_your_api_key_here

# The ID of your Notion database (from the database URL)
# e.g., https://notion.so/workspace/abc123def456 -> abc123def456
NOTION_DATABASE_ID=your_database_id_here

# Your Notion user ID (for filtering tasks assigned to you)
# You can find this in Notion's API or by inspecting a task assigned to you
NOTION_USER_ID=your_user_id_here

# Optional: Name of the Reminders list to sync with (default: Work)
REMINDERS_LIST_NAME=Work

# Optional: Tag added to synced reminders (default: #Notion)
NOTION_TAG=#Notion
